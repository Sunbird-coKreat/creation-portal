{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "genDir": "aot",
    "debug": true,
  },
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "**/*.spec.data.ts"
  ]
}